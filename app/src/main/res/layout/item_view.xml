<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="9dp"
    android:elevation="8dp"
    app:cardCornerRadius="12dp"
    android:padding="20dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/background"
    >

    <TextView
        android:id="@+id/characterName"
        android:layout_width="189dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@color/title"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/characterGender"
        android:layout_width="90dp"
        android:layout_height="23dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="12dp"
        android:text="TextView"
        android:textColor="@color/values"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/characterSpecies"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/characterAvatar"
        android:layout_width="141dp"
        android:layout_height="156dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="image of characters"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/characterStatus"
        android:layout_width="90dp"
        android:layout_height="23dp"
        android:textSize="18sp"

        android:layout_marginStart="120dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:text="TextView"
        android:textColor="@color/values"
        app:layout_constraintBottom_toTopOf="@+id/characterGender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterName"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/characterSpecies"
        android:layout_width="90dp"
        android:layout_height="23dp"
        android:layout_marginStart="120dp"

        android:layout_marginBottom="16dp"
        android:text="TextView"
        android:textColor="@color/values"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="75dp"
        android:textSize="18sp"

        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:text="Status :"
        android:textColor="@color/attributes"
        app:layout_constraintEnd_toStartOf="@+id/characterStatus"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterName" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="75dp"
        android:layout_height="25dp"

        android:layout_marginTop="12dp"
        android:text="Gender :"

        android:textColor="@color/attributes"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/characterGender"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="75dp"
        android:layout_height="25dp"

        android:layout_marginBottom="12dp"
        android:text="Species : "
        android:textColor="@color/attributes"

        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/characterSpecies"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>