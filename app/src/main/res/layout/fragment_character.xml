<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/charFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CharacterFragment"
    android:background="?android:windowBackground"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--        <TextView-->
        <!--            android:id="@+id/charTitle"-->
        <!--            android:textAlignment="center"-->
        <!--            android:layout_margin="8dp"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:text="@string/hello_blank_fragment"-->
        <!--            android:textColor="@color/title"-->
        <!--            android:textSize="80sp"-->
        <!--            tools:layout_editor_absoluteX="0dp"-->
        <!--            tools:layout_editor_absoluteY="-16dp" />-->

        <ImageView
            android:id="@+id/charImage"
            android:layout_width="323dp"
            android:layout_height="155dp"
            android:layout_gravity="center"
            android:layout_marginBottom="144dp"
            android:contentDescription="@string/characters_image"
            app:layout_constraintBottom_toTopOf="@+id/charLocation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/charLocation"
            android:layout_width="300dp"
            android:layout_height="125dp"
            android:layout_marginBottom="36dp"
            android:text="Location"
            android:textAlignment="center"
            android:textSize="29sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/charlocation"
            android:layout_width="114dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="180dp"
            android:text="Location"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/charImage"
            app:layout_constraintVertical_bias="0.944" />

        <TextView
            android:id="@+id/charTitle"
            android:layout_width="389dp"
            android:layout_height="97dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="172dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/title"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/charImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>